{
    "compilerOptions": {
        "module": "es6",
        "target": "es2017",
        "declaration": true,
        "allowJs": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "es6",
            "dom"
        ]
    },
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ],
    "exclude": [
        "dist/**/*",
        "node_modules"
    ]
}